<% layout("/layouts/boilerplate") -%>

<h2>All Listings</h2>

<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing.id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />
          <span>
            ðŸ•’ <%= listing.timings?.opening || "N/A" %> - <%=
            listing.timings?.closing || "N/A" %>
          </span>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
