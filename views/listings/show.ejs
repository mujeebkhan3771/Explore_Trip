<% layout("/layouts/boilerplate") -%>
<script>
  const mapToken = "<%=process.env.MAP_TOKEN %>";
</script>

<div class="row mt-3">
  <div class="col-12 offset-1">
    <h2><%= listing.title %></h2>
  </div>
  <div class="card col-6 offset-2 listing-card">
    <img
      src=" <%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text">
        <!-- <b>&#8226;<%= listing.title %></b> <br /> -->
        &#8226; Owned by : <i><%= listing.owner.username %></i><br />
        &#8226;<%= listing.description %><br />
        &#8226;&#8377; <%= listing.price ? listing.price.toLocaleString("en-IN")
        : "N/A" %> / night
        <br />
        &#8226;<%= listing.location %> <br />
        &#8226;<%= listing.country %>
      </p>
    </div>
  </div>
</div>
<br />

<% if(currUser && currUser._id.equals(listing.owner._id)) { %>
<div class="btns">
  <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit</a>

  <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-dark">Delete</button>
  </form>
</div>
<% } %>

<!-- Review Section -->
<div class="review-section">
  <% if(currUser) { %>
  <h4>Leave a Review</h4>
  <form
    action="/listings/<%= listing.id %>/reviews"
    method="POST"
    novalidate
    class="needs-validation"
  >
    <!-- novalidate to stop default validation 
     & added bootstrap  validation class -->
    <!-- We have already implemented bootstrap form valiadation in public then js then script.js -->
    <!-- script Bootstrap validation implementen in boilerplate
     as script src="/js/script.js" -->

    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <fieldset class="starability-slot">
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="1"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
    </div>
    <br />
    <div>
      <label for="comment" class="form-label">Comments</label>
      <textarea
        name="review[comment]"
        id="comment"
        cols="30"
        rows="5"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">Please provide comment for review</div>
    </div>
    <button class="btn btn-outline-dark mt-2"><b>Submit</b></button>
  </form>
  <% } %>
  <hr />

  <% if(listing.reviews.length > 0) { %>
  <div class="row">
    <p><b>All Reviews</b></p>
    <% for(review of listing.reviews) { %>
    <div class="card col-6 ms-6 mb-6">
      <div class="card-body"></div>
      <h5 class="card-title">@<u><%= review.author.username %></u></h5>
      <p
        class="starability-result card-text"
        data-rating="<%= review.rating %>"
      ></p>
      <p class="card-text"><%= review.comment %></p>
      <!-- <p class="card-text"><%= review.rating %>-Star&#11088;</p> -->
      <br />
      <form
        class="mb-3"
        method="POST"
        action="/listings/<%= listing._id %>/reviews/<%= review.id %>?_method=DELETE"
      >
        <button class="btn btn-sm btn-dark">Delete</button>
      </form>
    </div>
    <% } %>
  </div>
  <% } %>
</div>
