<% layout("/layouts/boilerplate") -%>

<div class="row">
  <div class="col-12 offset-1 mt-3">
    <h2>Create a new Listing</h2>

    <!-- "novalidate" to stop default browser validation and added class i.e "needs-validation"-->
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <!-- <input name="title" type="text" placeholder="Enter title"> -->
      <br />
      <br />
      <div class="mb-2">
        <label for="title" class="form-label">Title </label>
        <input
          name="listing[title]"
          type="text"
          placeholder="Enter title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks fine!</div>
        <div class="invalid-feedback">Title is mandatory!</div>
      </div>
      <br />
      <br />
      <div class="mb-2">
        <label for="description" class="form-label">Description </label>
        <textarea
          name="listing[description]"
          placeholder="Enter description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description!</div>
      </div>
      <br />
      <br />
      <div class="mb-2">
        <label for="image" class="form-label">Upload Image </label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
      </div>
      <br />
      <br />
      <div class="row">
        <div class="mb-2 col-md-4">
          <label for="price" class="form-label">Price (&#8377;) </label>
          <input
            name="listing[price]"
            placeholder="Enter price"
            type="number"
            class="form-control"
            required
          />
          <!-- type="number" -->
          <div class="invalid-feedback">Please enter a valid Price!</div>
        </div>

        <div class="mb-2 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            type="text"
            placeholder="Enter country"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid country!</div>
        </div>
      </div>
      <br />
      <br />
      <div class="mb-2">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          type="text"
          placeholder="Enter location"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a valid location!</div>
      </div>
      <br />
      <br />
      <button class="btn btn-dark add-btn">Add</button>
      <br />
      <br />
    </form>
  </div>
</div>
